{
  "compilerOptions": {
    "lib": [
      "deno.worker"
    ]
  },
  "fmt": {
    "options": {
      "semiColons": false,
      "singleQuote": true
    }
  },
  "tasks": {
    "build": "deno run -A build.ts",
    "download": "deno run -A download.ts",
    "publish": "deno task build && npm publish"
  }
}
